<div class="loading-screen" id="loading-screen">
  <%= image_tag "WeMeet-white.png", class: "logo-white" %>
</div>

<div id="home" class="d-none">

  <div class="home-top">
    <div>
      <h1>Ce soir</h1>
      <h1>Tes potes</h1>
      <h1>Un bar central</h1>
      <h1>Zéro organisation</h1>
    </div>
  </div>

  <%= form_tag(events_path, method: "post") do %>

  <div id="form-availability">
    <div class="home-bottom-invisible">
      <div class="home-bottom">
        <p class= "tag-home-hour"><%= label_tag "Quelle heure ?"%></p>
        <%= time_field_tag "event[start_time]", "20:00", class: 'form-input valid-input'%>
        <i class="fas fa-chevron-down" id="first-arrow"></i>
      </div>
    </div>
  </div>

  <div class="buttons-toggle" id="form-2">
    <p class= "tag-home-hour"> <%= label_tag "Réponse souhaitée…"%></p>
      <div class="btn-group" data-toggle="buttons">
        <label class="btn btn-primary form-check-label label-deadline">
        <input class="form-check-input deadline" type="radio" name="event[available_time]" id="option1" autocomplete="off" value="1">
          1h <br> avant
        </label>
        <label class="btn btn-primary form-check-label label-deadline">
          <input class="form-check-input deadline" type="radio" name="event[available_time]" id="option2" autocomplete="off" value="2">
          2h <br> avant
        </label>
        <label class="btn btn-primary form-check-label label-deadline">
          <input class="form-check-input deadline" type="radio" name="event[available_time]" id="option3" autocomplete="off" value="3">
          3h <br> avant
        </label>
      </div>
      <div class="arrows">
        <i class="fas fa-chevron-down" id="second-arrow"></i>
      </div>
  </div>



  <div class="container-wm">
    <div class="form-container">
      <div id="form-3"><%= label_tag 'NOM' %>
        <%= text_area_tag :name, "", class: 'form-control form-input', placeholder: "Marie", required: true%>
        <div class="arrows">
          <i class="fas fa-chevron-down" id="third-arrow"></i>
        </div>
      </div>
    </div>
  </div>

  <div class="container-wm">
    <div class="form-container">
      <div id="form-4"><%= label_tag 'Téléphone' %>
        <%= text_area_tag :phone_number, "", class: 'form-control form-input', placeholder: "0660832635", required: true %>
        <div class="arrows">
          <i class="fas fa-chevron-down" id="fourth-arrow"></i>
        </div>
      </div>
    </div>
  </div>

  <div class="container-wm">
    <div class="form-container">
      <div id="form-5"><%= label_tag "Adresse" %>
          <%= text_field_tag :address, "", class: 'form-control form-input', placeholder: "16 villa Gaudelet, 75011", required: true %></div>
        <div class="btn-bottom">
          <div class="next-btn">
            <%= submit_tag "Crée ton événement", class: "btn-blue-wm no-border mt-5", id: "new-event" %>
          </div>
         </div>
      </div>
    </div>
  </div>
</div>
</div>
</div>
<% end %>
</div>
