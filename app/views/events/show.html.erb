<h1> final bar </h1>

<div class="card-bar">
  <div class="bar-name">
            <h1><%= counter.to_s + ". " + bar.name %><h1>
            <% counter += 1 %>
  </div>
  <div class="card-bar-infos">
            <h2><%= bar.address %></h2>
            <div class="card-bar-ratings-price">
              <div>
                <% bar.rating.times do %>
                  <i class="fa fa-star"></i>
                <% end %>
              </div>
            </div>
          </div>
  </div>


<div
    id="map"
    style="width: 50%;
    height: 600px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>














