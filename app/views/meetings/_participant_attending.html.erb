<% if meeting.user %>

  <div class="card-participant">
    <% photo_number = meeting.user&.photo_number || rand(1..19) %>
    <%= image_tag "avatars/avatar-0#{photo_number}.png", class: "avatar-large dispo", alt: "avatar-large" %>
   <div class="card-participant-infos">
    <h2><%= meeting.user.name %></h2>
    <p>Dispo <strong><%= meeting.available_time %></strong></p>
    </div>
  </div>

<% else %>

  <div class="card-participant">
    <% link_non = "avatars/avatar-0#{rand(1..19)}.png" %>
    <%= image_tag link_non, class: "avatar-large nondispo", alt: "avatar-large" %>
   <div class="card-participant-infos">
    <h2><%= meeting.name %></h2>
    <p>Pas dispo</p>
   </div>
  </div>

<% end %>
