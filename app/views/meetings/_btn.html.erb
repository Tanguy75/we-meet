<% if event.meetings.where(attending: true, organizer: false).length == 0 %>
  <div>
    <div class="container-link link-to-share d-none">
      <% link = "/events/" + event.id.to_s + "/meetings/new" %>
      <%= link %>
    </div>
  </div>
    <%= link_to "Repartage ton événement", event_share_again_path(event), class: "btn-red-wm btn-sticky share", data: { event: event.id } %>
<% else %>
  <div>
    <%= link_to "Passe aux votes pour les bars",  event_suggested_bars_path(event), class: "btn-red-wm btn-sticky", data: { event: event.id } %>
  </div>
<% end %>
