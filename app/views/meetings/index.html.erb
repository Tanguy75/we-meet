<div class="container">
  <div class="d-flex align-items-start pt-3 pb-3">
    <%= image_tag "WeMeet-black.png", class: "logo-black"  %>
  </div>


    <div class="card">
      <% @event.meetings.where(attending: true).each do |meeting| %>
    <div class="card-participant">
      <% link = "avatars/avatar-0#{meeting.user.photo_number}.png" %>
      <%= image_tag link, class: "avatar-large", alt: "avatar-large" %>
       <div class="card-participant-infos">
        <h2><%= meeting.user.name %></h2>
        <p>Dispo <%= meeting.available_time %> </p>
        </div>
      </div>
        <% end %>
    </div>

<hr>

    <div class="card">
      <% @event.meetings.where(attending: false).each do |meeting| %>
    <div class="card-participant">
      <%# [avatars = rand(1..8)] %>
      <% link2 = "avatars/avatar-0#{meeting.photo_number}.png" %>
      <%= image_tag link2, class: "avatar-large", alt: "avatar-large" %>
       <div class="card-participant-infos">
        <h2><%= meeting.name %></h2>
        <p>Pas dispo</p>
        </div>
      </div>
        <% end %>
    </div>

</div>
